<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_theme"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_version_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18_dimens"
        />

    <TextView
        android:id="@+id/title_park"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/city_parking"
        android:textColor="@color/white"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/pda_parking_terminal"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_rec_white_bg"
        android:padding="5dp">

        <EditText
            android:id="@+id/login_user_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="@string/please_enter_account"
            android:singleLine="true"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/login_user_pw_et"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:background="@drawable/login_rec_white_bg"
        android:hint="@string/please_enter_pw"
        android:inputType="textPassword"
        android:padding="5dp"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/login_tv"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        android:background="@mipmap/login_button"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/main_theme"
        android:textSize="25sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>